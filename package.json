  "scripts": {
    "nx": "nx",
    "ng": "ng",
    "start": "bun run front",
    "front": "nx serve frontend",
    "back": "nx serve backend",
    "test": "nx test frontend",
    "lint": "nx lint frontend",
    "e2e": "nx e2e frontend",
    "build": "nx run frontend:build:production && bun run build:wb",
    "build:wb": "bun x webpack --config ./apps/frontend/builders/webpack.config.js",
    "watch": "node --watch dist/apps/frontend/server/server.mjs",
    "prod": "bun dist/apps/frontend/server/server.mjs",
    "reset": "nx daemon stop && rm -rf .angular/cache .nx/cache .nx/workspace-data",
    "clean": "bun run reset && rm -rf ./node_modules/ bun.lock && bun install",
    "update": "nx migrate latest && nx migrate --run-migrations --if-exists && git commit -am 'chore: update dependencies' && bun x npm-check-updates -u && bun install",
    "analyze:frontend": "rm -rf dist/apps/frontend && nx build frontend --stats-json --named-chunks && npx -y @angular-experts/hawkeye dist/apps/frontend/stats.json",
    "docker:build": "podman build --tag home .",
    "docker:start": "podman run -d -p 4200:4200 --name home home",
    "docker:stop": "podman container stop home && podman container rm home",
    "docker:inspect": "podman exec -it home /bin/bash"
  },
