  "scripts": {
    "nx": "nx",
    "ng": "ng",
    "start": "bun run dash",
    "dash": "nx serve dash",
    "dash-api": "nx serve dash-api",
    "test": "nx test dash",
    "lint": "nx lint dash",
    "e2e": "nx e2e dash",
    "build": "nx run dash:build:production && bun run build:wb",
    "build:wb": "bun x webpack --config ./apps/dash/builders/webpack.config.js",
    "watch": "node --watch dist/apps/dash/server/server.mjs",
    "prod": "bun dist/apps/dash/server/server.mjs",
    "reset": "nx daemon stop && rm -rf .angular/cache .nx/cache .nx/workspace-data",
    "clean": "bun run reset && rm -rf ./node_modules/ bun.lock && bun install",
    "update": "nx migrate latest && nx migrate --run-migrations --if-exists && git commit -am 'chore: update dependencies' && bun x npm-check-updates --format group -u --cooldown 5 --target minor && bun install",
    "analyze:dash": "rm -rf dist/apps/dash && nx build dash --stats-json --named-chunks && npx -y @angular-experts/hawkeye dist/apps/dash/stats.json",
    "docker:build": "podman build --tag home .",
    "docker:start": "podman run -d -p 4200:4200 --name home home",
    "docker:stop": "podman container stop home && podman container rm home",
    "docker:inspect": "podman exec -it home /bin/bash"
  },
  "private": true,
